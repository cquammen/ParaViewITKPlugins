<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
   <SourceProxy name="Binary Thinning Filter" class="vtkBinaryThinning3DFilter" label="Binary Thinning Filter">
     <Documentation
        long_help="Apply Binary Thinning Filter to the image."
        short_help=".">
          Put some text describing the filter here.
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkImageData"/>
           </DataTypeDomain>
      </InputProperty>
      <Hints>
        <ShowInMenu category="ITK Image Filters" />
      </Hints>

   <!-- End BinaryThinning3D -->
   </SourceProxy>

   <SourceProxy name="BinaryThresholdImageFilter" class="vtkBinaryThresholdImageFilter" label="Binary Threshold Image Filter">
     <Documentation
        long_help="Apply Binary Threshold Image Filter to the image."
        short_help=".">
          Put some text describing the filter here.
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkImageData"/>
           </DataTypeDomain>
      </InputProperty>

     <IntVectorProperty
        name="Outside Value"
         label="Outside Value"
         command="SetoutsideValue"
         number_of_elements="1"
         default_values="0" >
      </IntVectorProperty>

     <IntVectorProperty
        name="Inside Value"
        label="Inside Value"
        command="SetinsideValue"
        number_of_elements="1"
        default_values="1" >
     </IntVectorProperty>

     <IntVectorProperty
        name="Lower Threshold"
        label="Lower Threshold"
        command="SetlowerThreshold"
        number_of_elements="1"
        default_values="100" >
     </IntVectorProperty>

     <IntVectorProperty
        name="Upper Threshold"
        label="Upper Threshold"
        command="SetupperThreshold"
        number_of_elements="1"
        default_values="150" >
     </IntVectorProperty>
     <Hints>
       <ShowInMenu category="ITK Image Filters" />
     </Hints>
     
   <!-- End BinaryThresholdImageFilter -->
   </SourceProxy>

    <SourceProxy name="CoocurrenceTextureFeaturesImageFilter" class="vtkCoocurrenceTextureFeaturesImageFilter" label="Coocurrence Texture Features Image Filter">
      <Documentation
         long_help="Apply a Coocurrence Texture Features filter to the image."
         short_help=".">
        Put some text describing the filter here.
      </Documentation>
      <InputProperty
         name="Input"
         command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkImageData"/>
        </DataTypeDomain>
      </InputProperty>

      <IntVectorProperty
         name="Number Of Bins Per Axis"
         label="Number Of Bins Per Axis"
         command="SetNumberOfBinsPerAxis"
         number_of_elements="1"
         default_values="7" >
      </IntVectorProperty>
      
      <DoubleVectorProperty
         name="Histogram Minimum"
         label="Histogram Minimum"
         command="SetHistogramMinimum"
         number_of_elements="1"
         default_values="0.0" >
      </DoubleVectorProperty>
      
      <DoubleVectorProperty
         name="Histogram Maximum"
         label="Histogram Maximum"
         command="SetHistogramMaximum"
         number_of_elements="1"
         default_values="50.0" >
      </DoubleVectorProperty>

      <IntVectorProperty
         name="Neighborhood Radius"
         label="Neighborhood Radius"
         command="SetNeighborhoodRadius"
         number_of_elements="1"
         default_values="3" >
      </IntVectorProperty>
      
      <Hints>
        <ShowInMenu category="ITK Image Filters" />
      </Hints>
      <!-- End CoocurrenceTextureFeaturesImageFilter -->
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
