<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
   <SourceProxy name="MedianFilter" class="vtkMedianImageFilter" label="Median Image Filter">
     <Documentation
        long_help="Apply a median filter to the image."
        short_help=".">
          Put some text describing the filter here.
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkImageData"/>
           </DataTypeDomain>
      </InputProperty>

      <IntVectorProperty
         name="Radius"
         label="Radius"
         command="SetNeighborhoodRadius"
         number_of_elements="3"
         default_values="3 3 3" >
         <Documentation>
           .
         </Documentation>
      </IntVectorProperty>

   <!-- End GaussianImageFilter -->
   </SourceProxy>
 </ProxyGroup>
</ServerManagerConfiguration>
